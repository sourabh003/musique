<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musique">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".services.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Musique">
        <activity android:name=".view.EditAlbum"></activity>
        <activity android:name=".view.PlaylistInfo" />
        <activity android:name=".view.AddSongToPlaylist" />

        <receiver
            android:name=".services.NotificationReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="ACTION_PLAY" />
                <action android:name="ACTION_NEXT" />
                <action android:name="ACTION_PREVIOUS" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.PlayerService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".view.PlaylistSongs" />
        <activity android:name=".view.Playlists" />
        <activity android:name=".view.FolderSongs" />
        <activity android:name=".view.Folders" />
        <activity android:name=".view.Favorites" />
        <activity android:name=".view.AlbumSongs" />
        <activity android:name=".view.Player" />
        <activity android:name=".view.Test" />
        <activity
            android:name=".view.Library"
            android:label="@string/title_activity_library"
            android:theme="@style/Theme.Library" />
        <activity android:name=".view.Home" />
        <activity
            android:name=".view.Splash"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>